<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
              
             <form action="/verifyotp" method="post">
                   
                   {{#if otpErr}}
                <p class="error">{{otpErr}}</p>
                {{/if}}
                <h3 class="fw-bold mb-2 text-uppercase">OTP Login</h3>
              <p class="text-white-50 mb-2">Please enter otp</p>

              <div class="form-outline form-white mb-4">
               <label class="form-label" for="otp">OTP</label>
                <input type="number" id="otp" name="otp" class="form-control form-control-lg" />
              </div>
              <button class="btn btn-outline-light btn-lg px-5 mb-2" id="submitDetails" name="submitDetails" type="submit">Login</button>
           </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>