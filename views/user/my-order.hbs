 {{#if myorder}}
 <div class="container">
<table class="table" id="addressTable">
      <thead>
        <tr>
          <th>Date</th>
          <th>Status</th>
          <th>View product</th>
          <th>Total Amount</th>
          <th>Payment mode</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each myorder}}
        <tr>
             <td>{{this.date}}</td>
             <td>{{this.status}}</td>
              <td>
            <a href="/view-order/{{this._id}}" class="btn btn-success"
              >View Order</a>
          </td>
             <td>{{this.totalAmount}}</td>
             <td>{{this.paymentMode}}</td>
             <td>
              {{#if this.do}}
               {{#if this.cancelled }}
               <span class="text-danger">Order Cancelled</span>
               {{else}} 
               <span class="text-success">Delivered</span>
               {{/if}}
              {{else}}
            <a href="/cancel-order/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Sure you want to cancel order')">
               Cancel Order
               </a>
               {{/if}}
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>      

 </div>
 {{else}}
 <div class="bgorder">
             
            <div >
              <h1 class="hhh">No Orders Yet</h1>
            <a href="/user-home"><button class="home-btn text-center text-white bg-dark">Goback to Home</button></a> 
    </div>
 </div>
 {{/if}}

