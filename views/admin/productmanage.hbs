
  <div class="height-100 bg-light">

    <section><br><br>
  <div class="container">
    <div >
      <center><a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a></center>
    </div><br>
    <table class="table" id="userTable">
      <thead>
        <tr>
          {{!-- <th>#</th> --}}
          <th>Name</th>
          <th>Category</th>
          <th>Description</th>
          <th>Stock</th>
          <th>Price</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          {{!-- <th scope="row">1</th> --}}
          <td>{{this.productname}}</td>
          <td>{{this.category}}</td>
          <td>{{this.desc}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.price}}</td>
          <td><img style="width: 50px;height:50px" src="/product-image/{{this._id}}.png" alt=""></td>
          <td><a href="edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a h class="btn btn-danger"
              onclick="deleteProduct('{{this._id}}')">Delete</a>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>


  </div>
<script>
    $(function () {
      $('#userTable').DataTable();
    });

    deleteProduct = (id) => {
      swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this imaginary file!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    $.ajax({
      url:'/admin/delete-product/'+id,
      method:'delete',
      success:(res) => {
        swal("Poof! Your imaginary file has been deleted!", {
      icon: "success",
    });
      }
    })
  } else {
    swal("Your imaginary file is safe!");
  }
});
    }
  </script>


