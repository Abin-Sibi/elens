 <div class="height-100 bg-light">
 
 <div class="container">
<table class="table" id="orderTable">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Status</th>
          <th>Shipping Address</th>
          <th>Total Amount</th>
          <th>Payment mode</th>
          <th>OrderDetails</th>
          <th>Save</th>
        </tr>
      </thead>
      <tbody>
        {{#each myorder}}
        <tr>
             <td>{{this._id}}</td>
             <td>
              <form action="/admin/edit-status/{{this._id}}" method="post">
                <select class="" name="status" id="status">
                        <option value="" >{{this.status}}</option>
                        <option  value="cancelled">cancelled</option>
                        <option value="delivered">delivered</option>
                        <option value="shipped">shipped</option>
                        <option  value="placed">placed</option>
                      </select>
             </td>
             <td>{{this.deliveryDetails.address}},<br>{{this.deliveryDetails.pin}},<br>{{this.deliveryDetails.city}}</td>
             <td>{{this.totalAmount}}</td>
             <td>{{this.paymentMode}}</td>
               <td>
            <a href="/admin/view-order-details/{{this._id}}" class="btn btn-success"
              >View Details</a>
          </td>
             <td>
              {{#if do}}
              {{this.status}}
              {{else}}
            <button class="btn btn-success" type="submit"
             >Save Status</button>
             {{/if}}
          </td>

              </form>
             

        </tr>
        {{/each}}
      </tbody>
    </table>      

 </div>
  </div>


